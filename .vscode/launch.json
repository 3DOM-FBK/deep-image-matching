  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python CLI",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": [
        "--config",
        "alike+lightglue",
        "--images",
        "data/easy_small",
        "--force"
      ]
      // "args": [
      //   "--config",
      //   "superpoint+lightglue",
      //   "--images",
      //   "data/easy_small",
      //   "--force"
      // ]
      // "args": [
      //   "--config",
      //   "superpoint+lightglue",
      //   "--images",
      //   "data/statua_hard",
      //   "--strategy",
      //   "bruteforce",
      //   "--force"
      // ]
      // "args": [
      //   "--config",
      //   "superpoint+lightglue",
      //   "--images",
      //   "data/arsenale4",
      //   "--strategy",
      //   "bruteforce",
      //   "--force"
      // ]
    },
    {
      "name": "Python GUI",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["--gui"]
    },
    {
      "name": "Debug module",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
