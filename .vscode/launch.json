{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python CLI",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": [
        "--config",
        // "superpoint+lightglue",
        "loftr",
        "--images",
        "data/belv_lingua_easy",
        "--quality",
        "medium",
        "--tiling",
        "preselection",
        "--strategy",
        "bruteforce",
        // "--upright",
        "--force",
        "-V"
      ]
    },
    {
      "name": "Python GUI",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["--gui"]
    }
  ]
}
