{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python CLI",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": [
        "--config",
        "loftr",
        "--images",
        "assets/easy_small",
        "--strategy",
        "sequential",
        // "--upright",
        "--force",
        "-V"
      ]
    },
    {
      "name": "Python GUI",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["--gui"]
    }
  ]
}
